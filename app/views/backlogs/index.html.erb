<h1>Listing backlogs</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Points</th>
    <th>Priority</th>
    <th>Value</th>
    <th>Project</th>
    <th>Release</th>
    <th>Sprint</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @backlogs.each do |backlog| %>
  <tr>
    <td><%= backlog.Description %></td>
    <td><%= backlog.points %></td>
    <td><%= backlog.priority %></td>
    <td><%= backlog.value %></td>
    <td><%= backlog.project %></td>
    <td><%= backlog.release %></td>
    <td><%= backlog.sprint %></td>
    <td><%= backlog.user %></td>
    <td><%= link_to 'Show', backlog %></td>
    <td><%= link_to 'Edit', edit_backlog_path(backlog) %></td>
    <td><%= link_to 'Destroy', backlog, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

